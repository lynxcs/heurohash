Hover:
  ShowAKA: Yes
CompileFlags:
  Add: [-std=c++20]
  CompilationDatabase: ./compile_commands.json
Index:
  Background: Build
  StandardLibrary: Yes
  External:
    File: /tmp/clangd-external-indices

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add: ['bugprone-*', 'modernize-*', 'performance-*', 'concurrency-*', 'clang-analyzer-*', 'readability-*', 'portability-*']
    Remove: ['modernize-use-trailing-return-type', 'modernize-use-nodiscard']