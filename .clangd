Hover:
  ShowAKA: Yes
CompileFlags:
  Add: [-std=c++23]
  CompilationDatabase: ./compile_commands.json
Index:
  Background: Build
  StandardLibrary: Yes

Diagnostics:
  UnusedIncludes: Strict
  ClangTidy:
    Add: ['bugprone-*', 'modernize-*', 'performance-*', 'concurrency-*', 'clang-analyzer-*', 'readability-*', 'portability-*']
    Remove: ['modernize-use-trailing-return-type', 'modernize-use-nodiscard', 'readability-magic-numbers', 'readability-identifier-length']
